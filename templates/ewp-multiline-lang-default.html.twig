{#
/**
 * @file
 * Default theme implementation of a Multiline String with Optional Lang element.
 *
 * Available variables:
 * - multiline: the multiline string component.
 * - langtag: the language tag.
 * - langname: the language name.
 *
 * @see template_preprocess()
 *
 * @ingroup themeable
 */
#}
{{ multiline|nl2br }}
{% if langtag %}<br><small><abbr title="{{ langname }}">{{ langtag }}</abbr></small>{% endif %}
